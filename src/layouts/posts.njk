{% extends '../layouts/base.njk' %}
{% block content %}
	{% include 'common/header.njk' %}
	<section class="section pt-5">
		<div class="container blog-cards">
			<div class="row">
				{% for post in collections.posts %}
					{% if loop.first %}
						<div class="col-12">
							<div class="featured-card d-md-table card rounded-0 border-0 shadow-sm mb-5">
								<div class="featured-card-image card-img-container position-relative d-md-table-cell" style="background-image: url('/assets/img/blog/{{ post.data.image | url }}');">
									<span class="badge bg-success mb-2 position-absolute">Featured</span>
									<div class="card-img-overlay overlay-mask text-center p-0">
										<a class="overlay-mask-link position-absolute w-100 h-100" href="{{ post.url | url }}"></a>
									</div>
								</div>
								<div class="featured-card-body card-body d-md-table-cell pb-4">
									<h4 class="card-title mb-2"><a class="text-link" href="{{ post.url | url }}">{{ post.data.title }}</a></h4>
									<div class="card-text">
										<div class="excerpt mb-3">{{ post.data.description }}</div>
										<a class="btn btn-primary d-none d-md-inline-block" href="{{ post.url | url }}">Read more</a>
									</div>
								</div>
								<div class="card-footer border-0 d-md-none">
									<ul class="meta list-inline mb-0">
										<li class="list-inline-item me-3"><i class="far fa-clock me-2"></i>{{ post.data.post_date | date }}</li>
										<li class="list-inline-item"><i class="fas fa-comment me-2"></i><a class="text-link" href="{{ post.url | url }}#">8 Comments</a></li>
									</ul>
								</div>
							</div>
						</div>
					{% else %}
						<div class="col-12 col-md-6 col-lg-4 mb-5">
							<div class="card rounded-0 border-0 shadow-sm eq-height">
								<div class="card-img-container position-relative">
									<img class="card-img-top rounded-0" src="/assets/img/blog/{{ post.data.image | url }}" alt="{{ post.data.title }}">
									<div class="card-img-overlay overlay-mask text-center p-0">
										<div class="overlay-mask-content text-center w-100 position-absolute">
											<a class="btn btn-primary" href="{{ post.url | url }}">Read more</a>
										</div>
										<a class="overlay-mask-link position-absolute w-100 h-100" href="{{ post.url | url }}"></a>
									</div>
								</div>
								<div class="card-body pb-4">
									<h4 class="card-title mb-2">
										<a class="text-link" href="{{ post.url | url }}">{{ post.data.title }}</a>
									</h4>
									<div class="card-text">
										<div class="excerpt">
											{{ post.data.description }}
										</div>
									</div>
								</div>
								<div class="card-footer border-0">
									<ul class="meta list-inline mb-0">
										<li class="list-inline-item me-3">
											<i class="far fa-clock me-2"></i>{{ post.data.post_date | date }}
										</li>
										<li class="list-inline-item">
											<i class="fas fa-comment me-2"></i><a class="text-link" href="{{ post.url | url }}#comments">12 Comments</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
						{% if loop.index % 10 == 0 %}
							{% block loadMorePosts %}
								<div class="col-12 mb-5">
									<a class="btn-blog-more btn btn-primary w-100 text-white font-weight-bold">Load more posts...</a>
								</div>
							{% endblock %}
						{% endif %}
					{% endif %}
				{% endfor %}
				{{ loadMorePosts }}
			</div>
		</div>
	</section>
	{% include 'common/cta.njk' %}
	{% include 'common/footer.njk' %}
{% endblock %}
