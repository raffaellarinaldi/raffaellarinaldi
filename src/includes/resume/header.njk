<header class="resume-header pt-4 pt-md-0">
	<div class="row">
		<div class="col-block col-md-auto resume-picture-holder text-center text-md-start">
			<img class="picture" src="{{ '/assets/img/resume/profile.jpg' | url }}" alt="{{ site.title }}">
		</div>
		<div class="col">
			<div class="row p-4 justify-content-center justify-content-md-between">
				<div class="primary-info col-auto">
					<h1 class="name mt-0 mb-1 text-white text-uppercase">
						<span class="d-none d-lg-block">{{ site.title }}</span>
						<span class="d-block d-lg-none">{{ site.short.title }}</span>
					</h1>
					<div class="title mb-3">
						<span class="d-none d-lg-block">{{ site.subtitle }}</span>
						<span class="d-block d-lg-none">{{ site.short.subtitle }}</span>
					</div>
					<ul class="list-unstyled">
						<li class="mb-2">
							<a class="text-link" href="mailto:{{ site.email }}"><i class="far fa-envelope fa-fw me-2" data-fa-transform="grow-3"></i>{{ site.email }}</a>
						</li>
						<li>
							<a class="text-link" href="https://wa.me/{{ site.phone.mobile }}"><i class="fab fa-whatsapp fa-fw me-2" data-fa-transform="grow-6"></i>+{{ site.phone.mobile }}</a>
						</li>
					</ul>
				</div>
				<div class="secondary-info col-auto mt-2">
					<ul class="resume-social list-unstyled">
						{% for network in site.network %}
							{% if loop.index <= 3 %}
								<li class="mb-3">
									<a class="text-link" href="{{ network.link }}" target="_blank" rel="nofollow noreferrer noopener">
										<span class="fa-container text-center me-2"><i class="fab fa-{{ network.icon }} fa-fw"></i></span>{{ network.link | replace("https://", "") }}
									</a>
								</li>
							{% endif %}
						{% endfor %}
						<li>
							<a class="text-link" href="{{ site.url }}" target="_blank" rel="nofollow noreferrer noopener">
								<span class="fa-container text-center me-2"><i class="fas fa-globe"></i></span>{{ site.url | replace("https://", "") | replace("/", "") }}
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</header>
