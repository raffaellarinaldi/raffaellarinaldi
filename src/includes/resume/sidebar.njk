{% set translations = {
	'it': {
		'skills': {
			'title': 'Competenze & Strumenti'
		},
		'education': {
			'title': 'Formazione'
		},
		'courses': {
			'title': 'Corsi'
		},
		'languages': {
			'title': 'Lingue'
		},
		'interests': {
			'title': 'Interessi'
		}
	},
	'en': {
		'skills': {
			'title': 'Skills & Tools'
		},
		'education': {
			'title': 'Education'
		},
		'courses': {
			'title': 'Courses'
		},
		'languages': {
			'title': 'Languages'
		},
		'interests': {
			'title': 'Interests'
		}
	}
} %}
<section class="resume-section skills-section mb-5">
	<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">{{ translations[lang].skills.title }}</h2>
	<div class="resume-section-content">
		{% for service in resume.sidebar.services %}
			<div class="resume-skill-item">
				<h4 class="resume-skills-cat font-weight-bold">{{ service.title[lang] }}</h4>
				<ul class="list-unstyled{{ '' if loop.last else ' mb-4' }}">
					{% for skill in service.skills %}
						<li class="mb-2">
							<div class="resume-skill-name">{{ skill.name[lang] }}</div>
							<div class="progress resume-progress">
								<div class="progress-bar theme-progress-bar-dark" role="progressbar" style="width: {{ skill.percentage }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</li>
					{% endfor %}
				</ul>
				{% if loop.last %}
					<ul class="list-inline">
						{% for tool in resume.sidebar.tools %}
							<li class="list-inline-item"><span class="badge badge-light">{{ tool.name }}</span></li>
						{% endfor %}
					</ul>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</section>
<section class="resume-section education-section mb-5">
	<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">{{ translations[lang].education.title }}</h2>
	<div class="resume-section-content">
		<ul class="list-unstyled">
			{% for education in resume.sidebar.education %}
				<li class="{{ '' if loop.last else 'mb-2' }}">
					<div class="resume-degree font-weight-bold">{{ education.degree[lang] }}</div>
					<div class="resume-degree-org">{{ education.org }}</div>
					<div class="resume-degree-time">{{ education.time }}</div>
				</li>
			{% endfor %}
		</ul>
	</div>
</section>
<section class="resume-section reference-section mb-5">
	<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">{{ translations[lang].courses.title }}</h2>
	<div class="resume-section-content">
		<ul class="list-unstyled resume-awards-list">
			{% for course in resume.sidebar.courses %}
				<li class="{{ 'mb-0' if loop.last else 'mb-2' }} ps-4 position-relative">
					<i class="resume-award-icon fas fa-trophy position-absolute" data-fa-transform="shrink-2"></i>
					<div class="resume-award-name">{{ course.name }}</div>
					<div class="resume-award-desc">{{ course.desc }}</div>
				</li>
			{% endfor %}
		</ul>
	</div>
</section>
<section class="resume-section language-section mb-5">
	<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">{{ translations[lang].languages.title }}</h2>
	<div class="resume-section-content">
		<ul class="list-unstyled resume-lang-list">
			{% for language in resume.sidebar.languages %}
				<li class="{{ '' if loop.last else 'mb-2' }}">
					<span class="resume-lang-name font-weight-bold">{{ language.name[lang] }}</span> <small class="text-muted font-weight-normal">({{ language.level[lang] }})</small>
				</li>
			{% endfor %}
		</ul>
	</div>
</section>
<section class="resume-section interests-section mb-5">
	<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">{{ translations[lang].interests.title }}</h2>
	<div class="resume-section-content">
		<ul class="list-unstyled">
			{% for interest in resume.sidebar.interests %}
				<li class="mb-1">{{ interest.name[lang] }}</li>
			{% endfor %}
		</ul>
	</div>
</section>
