<section class="section-press py-5 bg-white">
    <div class="container">
        <h3 class="section-title font-weight-bold text-center mb-5">Featured in</h3>
        <div class="press-logos row">
            {% for featured in site.featured_in %}
                <div class="align-self-center press-logo px-4 px-lg-3 col-6 col-lg-3 me-0 px-md-5 px-lg-5 mb-3 mb-lg-0">
                    <a class="logo-link" href="{{ featured.link | url }}" target="_blank" rel="nofollow noreferrer noopener">
                        <img class="img-fluid svg-ie-fix" src="/assets/img/press/{{ featured.image | url }}">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
