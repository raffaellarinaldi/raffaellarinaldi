{% set translations = {
    'it': {
        'title': 'Progetti in Evidenza',
        'button': 'Vedi tutti',
        'slug': '/portfolio/'
    },
    'en': {
        'title': 'Featured Projects',
        'button': 'View all',
        'slug': '/en/portfolio/'
    }
} %}
<section class="section-featured-projects py-5">
	<div class="container">
		<h3 class="section-title font-weight-bold text-center mb-5">{{ translations[lang].title }}</h3>
		<div class="project-cards row mb-5">
			{% for project in collections.projects | featured(true) %}
					<div class="col-12 col-lg-4">
						<div class="card rounded-0 border-0 shadow-sm mb-5 mb-lg-0">
							<div class="card-img-container position-relative">
								<img class="card-img-top rounded-0" src="/assets/img/projects/{{ project.data.title | slugify | url }}-bg.jpg" alt="{{ project.data.title }}">
								<div class="card-img-overlay overlay-logo text-center">
									<div class="project-logo"><img class="img-fluid w-50" src="/assets/img/projects/{{ project.data.title | slugify | url }}-logo-light.svg"></div>
								</div>
								<a class="card-img-overlay overlay-content text-start p-lg-4" href="{{ project.url | url }}">
									<h5 class="card-title font-weight-bold">{{ project.data.title }}</h5>
									<p class="card-text">{{ project.data.description }}</p>
								</a>
							</div>
							<div class="card-body pb-0">
								<h4 class="card-title text-truncate text-center mb-0">
									<a class="text-link">{{ project.data.type }}</a>
								</h4>
							</div>
							<div class="card-footer border-0 text-center bg-white pb-4">
								<ul class="list-inline mb-0 mx-auto">
									{% for tag in project.data.tags %}
										<li class="list-inline-item">
											<span class="badge bg-secondary badge-pill">{{ tag }}</span>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div>
			{% endfor %}
		</div>
		<div class="text-center">
			<a class="btn btn-primary" href="{{ translations[lang].slug | url }}">{{ translations[lang].button }}</a>
		</div>
	</div>
</section>
