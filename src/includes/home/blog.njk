<section class="section-latest-blog py-5">
	<div class="container">
		<h3 class="section-title font-weight-bold text-center mb-5">Latest Blog Posts</h3>
		<div class="blog-cards row">
			{% for post in collections.posts %}
				{% if loop.index <= 4 %}
					<div class="col-12 col-lg-6">
						<div class="card rounded-0 border-0 shadow-sm mb-5">
							<div class="card-img-container position-relative">
								<img class="card-img-top rounded-0" src="/assets/img/blog/{{ post.data.image | url }}" alt="{{ post.data.title }}">
								<div class="card-img-overlay overlay-mask overlay-logo text-center p-0">
									<div class="overlay-mask-content text-center w-100 position-absolute">
										<a class="btn btn-primary" href="{{ post.url | url }}">Read more</a>
									</div>
									<a class="overlay-mask-link position-absolute w-100 h-100" href="{{ post.url | url }}"></a>
								</div>
							</div>
							<div class="card-body pb-4">
								<h4 class="card-title text-truncate mb-2"><a class="text-link" href="{{ post.url | url }}">{{ post.data.title }}</a></h4>
								<div class="card-text">
									<ul class="meta list-inline mb-1">
										<li class="list-inline-item me-3"><i class="far fa-clock me-2"></i>{{ post.data.post_date | date }}</li>
										<li class="list-inline-item"><i class="fas fa-comment me-2"></i><a class="text-link" href="#">4 Comments</a></li>
									</ul>
									<div class="excerpt">{{ post.data.description }}</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
	<div class="text-center">
		<a class="btn btn-primary" href="{{'/blog/' | url }}">View all posts</a>
    </div>
</section>
