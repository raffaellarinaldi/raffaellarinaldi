<nav class="post-nav d-flex justify-content-between">
	<div class="nav-previous"><a class="text-link" href="#" rel="prev"><i class="fas fa-long-arrow-alt-left me-1"></i>Previous <span class="d-none d-md-inline">Post</span></a></div>
	<div class="nav-next"><a class="text-link" href="#" rel="next">Next <span class="d-none d-md-inline">Post</span><i class="fas fa-long-arrow-alt-right ms-1"></i></a></div>
</nav>
<div class="author-block my-5 bg-white p-4 p-l-5 shadow-sm">
    <div class="row">
        <div class="col-12 col-md-auto">
	        <img class="author-profile profile-small d-inline-block rounded-circle" src="{{ '/assets/img/profile.svg' | url }}" alt="{{ site.title }}">
        </div>
        <div class="col author-info">
            <h4 class="mb-2 font-weight-bold">{{ site.title }}</h4>
            <div class="mb-3">I'm a full stack developer with a passion for software development and UX. You can follow me via the various channels below:</div>
            <ul class="social-list-color list-inline mb-0">
            	{% for network in site.network %}
	                <li class="list-inline-item{{ '' if loop.last else ' mb-3' }}"><a class="{{ network.name }} rounded-circle" href="{{ network.link }}" target="_blank" rel="nofollow noreferrer noopener"><i class="fab fa-{{ network.icon }} fa-fw"></i></a></li>
	            {% endfor %}
            </ul>
        </div>
    </div>
</div>

